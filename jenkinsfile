pipeline{
    agent any
    
    tools{
        maven 'M3'
        jdk 'jdk17'
    }
    
    environment {
        SONAR_HOME= tool 'sonar-scan'
    }
    stages{
        stage('checkout'){
            steps{
                cleanWs()
                git branch:'main', url:'https://github.com/nagarajAI/maven-project.git'
            }
        }
        stage('build'){
            steps{
                sh 'mvn clean package'
            }
        }
        stage('sonarqube-scan'){
            steps{
                timeout(time: 2, unit: 'MINUTES') {
                withSonarQubeEnv('sonarqube') {
                    sh ''' 
                    $SONAR_HOME/bin/sonar-scanner -Dsonar.projectName=calculator -Dsonar.projectKey=calculator \
                    -Dsonar.java.binaries=target \
                    -Dsonar.exclusions=src/main/webapp/**/*.min.js,src/main/webapp/**/*.html
                    '''
                    }
                }
            }
        }
        stage('QualityGate'){
            steps{
                waitForQualityGate abortPipeline: true
            }
        }
        stage('docker-build'){
            steps{
                script{
                    withDockerRegistry(credentialsId: 'docker-cred') {
                        sh '''
                        docker build -t rayhubli/maven_demo:$BUILD_NUMBER .
                        docker push rayhubli/maven_demo:$BUILD_NUMBER
                        '''
                    }
                }
            }
        }
        stage('docker run'){
            steps{
                try{
                    sh 'docker rm app'
                }catch(Exception e){
                    echo "Exception occurred: ${e.getMessage()}" 
                }finally{
                    sh 'docker run -itd --name app -p 80:8080 rayhubli/maven_demo:$BUILD_NUMBER'
                }
            }
        }
    }
}